<%- include('../partials/header') -%>

<h1>Delete Genre: <%= genre.name %></h1>

<% if (genre_books.length) { %>
    <p><strong>Delete the following books before attempting to delete this genre.</strong></p>
    <div style="margin-left: 20px; margin-top: 20px;">
        <h4>Books</h4>
        <dl>
            <% genre_books.forEach((book) => { %>
                <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
                <dd><%= book.summary %></dd>
            <% }); %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this Genre?</p>
    <form action="" method="post">
        <div class="form-group">
            <input id="id" class="form-control" type="hidden" name="id" required="true" value="<%= genre._id %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
<% } %>

<%- include('../partials/footer') -%>